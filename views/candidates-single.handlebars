<div class="entity candidate tab-interface">
  <header class="entity__header">
    <div class="container">
      <div class="entity__header--top row">
        <div class="entity__header--bio">
          <h1>{{ name }}</h1>
          <ul class="entity__meta">
            <li>Candidate for {{ office }}</li>
            <li>Principal committee: <a href="#">[ Committee name ]</a></li>
          </ul>
        </div>
        <div class="time-period">
          <label for="time-period-select">View records for</label>
          <select id="time-period-select" class="chosen-select">
            <option>2012-2014</option>
            <option>2010-2012</option>
          </select>
        </div>
      </div>
      <div class="entity__header--bottom row">
        <div class="chunk--third">
          <h4>Candidate Information</h4>
          <dl class="entity__info data">
            <dt>Candidate ID:</dt>
            <dd>{{ id }}</dd>
            <dt>Status:</dt>
            <dd>{{ incumbent_challenge }}</dd>
            <dt>Party:</dt>
            <dd>{{ party }}</dd>
            <dt>State:</dt>
            <dd>{{ state }}</dd>
            <dt>District</dt>
            <dd>{{ district }}</dd>
          </dl>
        </div>
        <div class="chunk--third">
          <h4>Candidate Committees</h4>
          <dl class="entity__related-entities data">
            <dt>Principal Candidate Campaign Committee</dt>
            <dd>JANET FOR DELAWARE</dd>
            <dt>Authorized Committee</dt>
            <dd>FRIENDS OF JANET</dd>
          </dl>
        </div>
        <div class="chunk--third">
          <h4>Related Committees</h4>
          <dl class="entity__related-entities data">
            <dt>Joint Fundraising Committee</dt>
            <dd>CANDIDATES XYZ</dd>
            <dt>Leadership PAC</dt>
            <dd>LEADERPAC</dd>
          </dl>
        </div>
      </div>
    </div>
  </header>
